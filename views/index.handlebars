<div class="row ">
	<div class="col s12">
		<form class="form" action="/api/burgers" method="POST">
			<textarea type="text" name="burger" id="burger-input"></textarea>
			<p>Enter a burger you want to eat. Then, click the "Add Burger" button.</p>
			<button type="submit" id="add-burger">Add Burger</button>
		</form>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="list col s6">

			<h3>Burgers to Devour!</h3>
			{{#each burgers}}
			{{#unless devoured}}
			<div>
				<p>{{id}}. {{burger_name}} <button class="devour" data-burgerid="{{id}}"> Devour it!</button></p>
			</div>
			{{/unless}}
			{{/each}}
		</div>



		<div class="list col s6">

			<h3>Burgers Devoured!</h3>
			{{#each burgers}}
			{{#if devoured}}
			<div>
				<p>{{id}}. {{burger_name}}</p>
			</div>
			{{/if}}
			{{/each}}

		</div>
	</div>
</div>


